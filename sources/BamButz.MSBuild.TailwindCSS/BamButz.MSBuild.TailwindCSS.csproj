<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <DevelopmentDependency>true</DevelopmentDependency>
    <PackageId>BamButz.MSBuild.TailwindCSS</PackageId>
    <Version>1.0.0</Version>
    <Authors>BamButz</Authors>
    <Description>Package adds a build action "TailwindCSS" that will send marked files to postcss with tailwindcss plugin configured</Description>
    <PackageTags>TailwindCSS;MSBuild;Stylesheets;Web</PackageTags>
    <Copyright>Copyright 2020 Â© BamButz</Copyright>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/BamButz/msbuild-extensions</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="BamButz.MSBuild.TailwindCSS.targets" PackagePath="build" />
    <Content Include="BamButz.MSBuild.TailwindCSS.targets" PackagePath="buildMultiTargeting" />
    <Content Include="index.js" PackagePath="" />
  </ItemGroup>

  <!-- Testconfiguration -->

  <ItemGroup Condition="$(Configuration) == 'Debug'">
    <TailwindCSS Include="Test/Tailwind.scss" />
  </ItemGroup>

  <Import Project="BamButz.MSBuild.TailwindCSS.targets" Condition="$(Configuration) == 'Debug'" />

</Project>